  <div class="index-container">
  <div class= "full-show-container">

    <div class="categories-full-right-pane">

      <div class="choose-category">

        <div class="categories-right-pane-header">
            <h3 class="show-nearby">Showing nearby deals in: </h3>
        </div>

        <div id="category-menu">
          <div id="select-wrapper">
              <select id="page-select" class="styled">
              <% @categories.each do |category| %>
               <option <% if category== @category%>selected = "selected" <% end %>value="<%= category_path(category) %>"><%= category.name %></option>
              <% end %>
              </select>
          </div>

        </div>

      </div>

      <div class="deal-display-container">
        <% @deals.each do |deal| %>
          <div class="deal-display-element" style="<%=deal_background_image(deal) %>">
            <div class="deal-title-box">
              <h2><%= deal.title %></h2>
            </div>
            <div class="deal-display-description">
              <h5><%= deal.description %></h5>
            </div>
            <div class="deal-display-footer">
              <h4> <%= deal.finish_time.strftime("%A %I:%M %P") %> </h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    </div>


    <div class="map-canvas-container">

        <div class="map-view-navbar">
          <div ="select-wrapper">
              <select id ='mobile-dropdown'>
              <% @categories.each do |category| %>
               <option <% if category== @category%>selected = "selected" <% end %>value="<%= category_path(category) %>"><%= category.name %></option>
              <% end %>
              </select>
          </div>
        </div>

          <div id="map-canvas"></div>
          <div id="nav_bottom"></div>
    </div>

  </div>
</div>

