<div class="sign-up-login-container">
  <div class="sign-up-login-logo"></div>

  <div class="edit-account">
    <h2>Edit your Account</h2>

    <div class="edit-account-form">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :email, "Email" %><br />
        <%= f.email_field :email, class: "edit-account-field", autofocus: true %></div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div><%= f.label :name, "Business Name" %><br />
        <%= f.text_field :name,  class: "edit-account-field"%></div>

        <div><%= f.label :address, "Business Address" %><br />
        <%= f.text_area :address,  class: "edit-account-field address-field" %></div>

        <div><%= f.label :phone %><br />
        <%= f.text_field :phone, class: "edit-account-field" %></div>

        <div><%= f.label :password, "New Password" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "edit-account-field" %></div>

        <div><%= f.label :password_confirmation, "New Password Confirmation" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "edit-account-field" %></div>

        <div><%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "edit-account-field" %></div>

        <div class="update-account-btn pulse"><%= f.submit "", class: "no-style" %></div>
      <% end %>
    </div>
  </div>

  <div class="cancel-account">

    <h2>Unhappy in this relationship?</h2>
    <p>cancel your account</p>
    <ul class="cancel-options">
      <li> <%= button_to "",  registration_path(resource_name), class: "cancel-btn first", data: { confirm: "Are you sure? Can we just talk about it first?" }, method: :delete %></li>
      <li><%= link_to "",  :back %></li>
    </ul>
  </div>

</div>